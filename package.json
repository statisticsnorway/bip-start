{
  "name": "bip-start",
  "description": "Frontend for BIP-initializer; a generator for BIP config",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/statisticsnorway/start-bip"
  },
  "author": "Statistics Norway",
  "dependencies": {
    "axios": "^0.21.1",
    "axios-hooks": "^2.6.3",
    "formik": "^2.2.9",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^2.0.3",
    "web-vitals": "^1.0.1",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@beam-australia/react-env": "^3.1.1",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^13.1.9",
    "standard": "^16.0.3"
  },
  "scripts": {
    "prestart": "react-env --dest ./public",
    "start": "react-scripts start",
    "build": "react-scripts build && react-env --dest ./build",
    "test": "standard && react-scripts test",
    "coverage": "react-scripts test --coverage --watchAll=false"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "license": "Apache-2.0",
  "licenses": [
    {
      "type": "Apache-2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0"
    }
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**",
      "!**/index.js",
      "!**/reportWebVitals.js"
    ],
    "coverageReporters": [
      "cobertura",
      "lcov",
      "text"
    ]
  }
}
